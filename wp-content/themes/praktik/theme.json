      "fontWeight": true,
      "letterSpacing": true,
      "lineHeight": true,
      "textDecoration": true,
      "textTransform": true
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--white)",
      "text": "var(--wp--preset--color--gray-900)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--inter)",
      "fontSize": "var(--wp--preset--font-size--body)",
      "lineHeight": "1.6"
    },
    "elements": {
      "link": {
        "color": {
          "text": "var(--wp--preset--color--primary)"
        },
        ":hover": {
          "color": {
            "text": "var(--wp--preset--color--primary-light)"
          }
        }
      },
      "button": {
        "color": {
          "background": "var(--wp--preset--color--primary)",
          "text": "var(--wp--preset--color--white)"
        },
        "typography": {
          "fontWeight": "600"
        },
        "border": {
          "radius": "0.5rem"
        },
        "spacing": {
          "padding": {
            "top": "0.75rem",
            "right": "1.5rem",
            "bottom": "0.75rem",
            "left": "1.5rem"
          }
        }
      },
      "heading": {
        "color": {
          "text": "var(--wp--preset--color--gray-900)"
        },
        "typography": {
          "fontWeight": "700",
          "lineHeight": "1.2"
        }
      }
    },
    "blocks": {
      "core/group": {
        "spacing": {
          "padding": {
            "top": "2rem",
            "right": "1rem",
            "bottom": "2rem",
            "left": "1rem"
          }
        }
      },
      "core/cover": {
        "spacing": {
          "padding": {
            "top": "4rem",
            "right": "1rem",
            "bottom": "4rem",
            "left": "1rem"
          }
        }
      }
    }
  },
  "templateParts": [
    {
      "name": "header",
      "title": "Header",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "Footer",
      "area": "footer"
    }
  ]
